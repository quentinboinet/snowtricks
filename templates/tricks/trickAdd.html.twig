{% extends 'base.html.twig' %}

{% block title %}Publier une figure{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col col-md-8 text-center">
                <div class="card loginCard">
                    <div class="card-header"><h2>Ajouter une figure</h2></div>
                    <div class="card-body">
                        <p class="card-text">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label for="name" class="col-sm-4 col-form-label">Nom de la figure :</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Nom de figure" required minlength="2" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="description" class="col-sm-4 col-form-label">Description :</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" id="description" name="description" required></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="category" class="col-sm-4 col-form-label">Catégorie :</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="category" name="category">
                                        {% for category in categories %}
                                            <option value="{{ category.id }}">{{ category.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="picture1" class="col-sm-4 col-form-label">Images :<br />
                                    <span class="btn btn-info" id="addPictureUpload" title="Ajouter une image"><i class="fas fa-camera-retro"></i></span>
                                </label>
                                <div class="col-sm-8" id="pictureUploads">
                                    <input type="file" class="form-control-file" name="picture1">
                                    <input type="file" class="form-control-file" name="picture2">
                                    <input type="file" class="form-control-file" name="picture3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="video1" class="col-sm-4 col-form-label">Vidéos :<br />
                                    <span class="btn btn-info" id="addVideoUpload" title="Ajouter une vidéo"><i class="fas fa-video"></i></span>
                                </label>
                                <div class="col-sm-8" id="videoUploads">
                                    <input type="text" class="form-control" id="video1" name="video1" placeholder="Lien vers la vidéo 1">
                                    <input type="text" class="form-control" id="video2" name="video2" placeholder="Lien vers la vidéo 2">
                                    <input type="text" class="form-control" id="video3" name="video3" placeholder="Lien vers la vidéo 3">
                                </div>
                                <div id="videoErrorMessage" class="col-sm-8 offset-sm-4 formErrorMessage"></div>
                            </div>

                            {% if error %}
                                <div class="formErrorMessage">{{ error }}</div>
                            {% endif %}

                            <div class="form-group row justify-content-center">
                                <div class="col-sm-10 ">
                                    <button id="sumbitButtonAddTrick" type="submit" class="btn btn-info btn-circle"><i class="fas fa-check fa-2x"></i></button>
                                </div>
                            </div>

                            <input type="text" id="pictureNb" name="pictureNb" value="3" style="display: none;"/>
                            <input type="text" id="videoNb" name="videoNb" value="3" style="display: none;"/>
                        </form>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/addUploadField.js') }}"></script>
{%  endblock %}