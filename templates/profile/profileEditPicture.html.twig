{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col col-md-8">
                <div class="card profileCard">
                    <div class="card-header text-center">
                        <h2 class="card-title d-inline align-middle">Modifier mon image de profil</h2>
                    </div>
                    <div class="card-body">
                            <div class="row align-items-center text-center" id="profileSection" data-defaultpicture="{{ asset('images/default_cover.jpg') }}">
                                <div class="col col-md-8 offset-md-2">
                                    {{ form_start(form) }}
                                    <img class="img-fluid rounded profilePictureClass" src="{% if app.user.profilePicture == "" %}{{ asset('images/default_cover.jpg') }}{% else %}{{ app.user.profilePicture.path }}{% endif %}" title="Votre photo de profil" />
                                </div>
                            </div>

                            <hr />
                            <div class="form-group row justify-content-center offset-md-2 col-md-8">
                                <label class="col-md-2 col-form-label text-center" for="{{ form.picture.vars.id }}">{{ form.picture.vars.label }}</label>
                                <div class="col-md-6">
                                    <div class="custom-file">
                                        <input type="{{ form.picture.vars.type }}" id="{{ form.picture.vars.id }}" name="{{ form.picture.vars.full_name }}" class="form-control custom-file-input">
                                        <label for="{{ form.picture.vars.id }}" class="custom-file-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row justify-content-center">
                                <span class="formErrorMessage">{{ form_errors(form.picture) }}</span><br />
                                <span class="formErrorMessage">{{ form_errors(form) }}</span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <button type="submit" class="btn btn-info btn-circle"><i class="fas fa-check fa-2x"></i></button>
                            </div>
                        {{ form_widget(form._token) }}
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('js/editProfile.js') }}"></script>

{% endblock %}