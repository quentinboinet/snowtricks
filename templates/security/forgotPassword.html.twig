{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col col-md-4 text-center">
                <div class="card loginCard">
                    <div class="card-header"><h2>Mot de passe oublié ?</h2></div>
                    <div class="card-body">
                        <p class="card-text">
                        <form method="post">

                            <div class="form-group row">
                                <label for="username" class="col-sm-4 col-form-label">Votre nom d'utilisateur :</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="username" name="username" placeholder="Votre nom d'utilisateur" required minlength="2" maxlength="50">
                                </div>
                            </div>

                            {% if error %}
                                <div class="formErrorMessage">{{ error }}</div>
                            {% endif %}

                            <div class="form-group row justify-content-center">
                                <div class="col-sm-10 ">
                                    <button type="submit" class="btn btn-info btn-circle"><i class="fas fa-check fa-2x"></i></button>
                                </div>
                            </div>
                        </form>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}