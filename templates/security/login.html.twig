{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col col-md-4 text-center">
                <div class="card loginCard">
                    <div class="card-header"><h2>Connexion</h2></div>
                    <div class="card-body">
                        <p class="card-text">
                        <form method="post">

                            <div class="form-group row">
                                <label for="username" class="col-sm-4 col-form-label">Nom d'utilisateur :</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="username" name="username" placeholder="Votre nom d'utilisateur" value="{{ last_username }}" required minlength="2" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-sm-4 col-form-label">Mot de passe :</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Votre mot de passe" required>
                                </div>
                            </div>

                            {% if error %}
                                <div class="formErrorMessage">{{ error.messageKey|trans(error.messageData, 'security', 'fr') }}</div>
                            {% endif %}

                            <div class="form-group row justify-content-center">
                                <div class="col-sm-10 ">
                                    <button type="submit" class="btn btn-info btn-circle"><i class="fas fa-check fa-2x"></i></button>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                        </form>

                        <a href="" title="J'ai oublié mon mot de passe">Mot de passe oublié</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}