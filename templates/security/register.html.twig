{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col col-md-4 text-center">
                <div class="card loginCard">
                    <div class="card-header"><h2>Inscription en 2 minutes !</h2></div>
                    <div class="card-body">
                        <p class="card-text">
                        <form method="post">

                            <div class="form-group row">
                                <label for="username" class="col-sm-4 col-form-label">Nom d'utilisateur :</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="username" name="username" placeholder="Votre nom d'utilisateur" required minlength="2" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="email" class="col-sm-4 col-form-label">E-mail :</label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Votre adresse e-mail" required minlength="2" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-sm-4 col-form-label">Mot de passe :</label>
                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Votre mot de passe" required>
                                </div>
                            </div>

                            <div class="form-group row justify-content-center">
                                <div class="col-sm-10 ">
                                    <button type="submit" class="btn btn-info btn-circle"><i class="fas fa-check fa-2x"></i></button>
                                </div>
                            </div>
                        </form>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}